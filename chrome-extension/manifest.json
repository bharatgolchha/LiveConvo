{
  "manifest_version": 3,
  "name": "LivePrompt AI Advisor",
  "version": "1.0.0",
  "description": "Real-time AI conversation coaching directly in your browser",
  "icons": {
    "16": "public/icon-16.png",
    "32": "public/icon-32.png",
    "48": "public/icon-48.png",
    "128": "public/icon-128.png"
  },
  "permissions": [
    "storage",
    "tabCapture",
    "activeTab",
    "identity",
    "notifications",
    "sidePanel",
    "alarms"
  ],
  "host_permissions": [
    "https://liveprompt.ai/*",
    "https://ucvfgfbjcrxbzppwjpuu.supabase.co/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "public/icon-16.png",
      "32": "public/icon-32.png"
    },
    "default_title": "LivePrompt AI Advisor"
  },
  "side_panel": {
    "default_path": "sidebar/index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*", "https://zoom.us/*", "https://teams.microsoft.com/*"],
      "js": ["content/inject.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/floating-ui.js", "public/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}